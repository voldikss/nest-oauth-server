<html lang='zh-CN'>
  <head>
    {{>head}}

    <link href="/css/custom.css" rel="stylesheet"/>

    <title>Create A OAuth2 Client</title>
  </head>

  <body>

  {{> navtab active='client'}}

    <div class='container'>

      <form method='post'>
        <div class='form-group'>
          <label>Name</label>
          <input class='form-control' name='name' type="text"/>
        </div>
        <div class='form-group'>
          <label>Redirect Uri (split by `,` if multiple uris are providered)</label>
          <input class='form-control' name='redirectUris' type="text" required/>
        </div>
        <div class='form-group'>
            <label>Scopes (split by `,` if multiple scopes are providered)</label>
            <input class='form-control' name='scope' type="text" placeholder="example: read_user,write_user,api,profile" required/>
        </div>
        <div class="form-check">
            <label>Grant Type(s)</label>
            <br>
            <input class="form-check-input" type="checkbox" name="grants" value="authorization_code" checked>
            <label class="form-check-label">authorization_code</label>
            <input class="form-check-input" type="checkbox" name="grants" value="password" >
            <label class="form-check-label">password</label>
            <input class="form-check-input" type="checkbox" name="grants" value="client_credentials" >
            <label class="form-check-label">client_credentials</label>
            <input class="form-check-input" type="checkbox" name="grants" value="refresh_token" >
            <label class="form-check-label">refresh_token</label>
        </div>
        <br/>
        <input type='submit' class='btn btn-success' />
      </form>

    </div>
  </body>
</html>
