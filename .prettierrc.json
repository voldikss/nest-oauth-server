{
  "$schema": "http://json.schemastore.org/prettierrc",
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": false,
  "quoteProps": "as-needed",
  "singleQuote": true,
  "arrowParens": "always",
  "bracketSpacing": true,
  "jsxSingleQuote": true,
  "printWidth": 82,
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": ["^@nestjs/(.*)$", "^\\w(.*)$", "^(../)(.*)$", "^(./)(.*)$"],
  "importOrderParserPlugins": ["typescript", "decorators-legacy"]
}
